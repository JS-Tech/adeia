<%= form_for :session, url: sessions_path do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  </div>

  <div class="actions">
    <%= f.submit "Login" %>
  </div>

<% end %>
